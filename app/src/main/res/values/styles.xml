<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/colorDark</item>
        <item name="android:navigationBarColor">@color/colorDark</item>
    </style>

    <style name="RedStatusBar" parent="AppTheme">
        <item name="android:statusBarColor">@color/colorRed</item>
        <item name="android:navigationBarColor">@color/colorRed</item>
    </style>

    <style name="Home" parent="AppTheme">
        <item name="android:statusBarColor">@color/colorDark</item>
        <item name="android:navigationBarColor">@color/colorMildDark</item>
    </style>

</resources>